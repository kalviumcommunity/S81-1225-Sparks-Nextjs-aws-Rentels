// PostgreSQL connection
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Prisma Client generator
generator client {
  provider = "prisma-client-js"
}

// User model
model User {
  id        Int       @id @default(autoincrement())
  name      String
  email     String    @unique
  createdAt DateTime  @default(now())

  projects  Project[]
}

// Project model
model Project {
  id        Int       @id @default(autoincrement())
  title     String
  userId    Int
  createdAt DateTime  @default(now())

  user      User      @relation(fields: [userId], references: [id])
}
